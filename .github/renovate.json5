{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        // expanded config:best-practices
        ":dependencyDashboard",
        ":semanticPrefixFixDepsChoreOthers",
        ":ignoreModulesAndTests",
        "group:monorepos",
        "group:recommended",
        "replacements:all",
        "workarounds:all",
        "docker:pinDigests",
        "helpers:pinGitHubActionDigests",
        ":configMigration",
        ":pinDevDependencies"
    ],
    "semanticCommits": "enabled",
    "semanticCommitType": "⬆️ chore",
    "packageRules": [
        {
            "description": "Auto merge up to patch",
            "automerge": true,
            "matchUpdateTypes": [
                "patch",
                "digest",
                "pinDigest"
            ]
        }
    ]
}